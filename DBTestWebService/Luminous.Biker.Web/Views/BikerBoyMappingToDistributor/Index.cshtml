@model IEnumerable<Luminous.Biker.Web.Models.BikerDistMapping>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create/Update Mapping", "Create")
</p>
<div class="table-responsive">
    <table class="table table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DistDealerDetail.Customer_Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BikerBoyDetail.BB_Code)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DistDealerDetail.Customer_Type)
                </td>
