@model Luminous.Biker.Web.Models.Item

@{
    ViewBag.Title = "Edit";
}

<h2  class="col-lg-12 col-xs-12 col-md-12 col-sm-12">Edit Item</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset class="col-lg-12 col-xs-12 col-md-12 col-sm-12">
        <legend>Item</legend>

        @Html.HiddenFor(model => model.ID)

        <div class="editor-label col-md-2">
            @Html.LabelFor(model => model.ItemName)
        </div>
        <div class="editor-field col-md-4">
            @Html.EditorFor(model => model.ItemName)
            @Html.ValidationMessageFor(model => model.ItemName)
        </div>

        <p>
            <input type="submit" class="btn btn-primary" value="Save" />
        </p>
    </fieldset>
}

<div class="col-lg-12 col-xs-12 col-md-12 col-sm-12">
    <p>@Html.ActionLink("Back to List", "Index")</p>
</div>


